            <li><a href="catatan/setup-laptop.html">Cara Setup Laptop Baru untuk Ngoding</a></li>
            </ul>
    </div>

    <script>
    function cariCatatan() {
        // Ambil teks yang diketik di kotak pencarian, ubah jadi huruf kecil
        const inputan = document.getElementById('kotakCari').value.toLowerCase();
        
        // Ambil semua elemen 'li' (item list) dari daftar catatan
        const semuaItem = document.querySelectorAll('#daftarCatatan li');

        // Loop atau periksa satu per satu setiap item
        semuaItem.forEach(item => {
            // Ambil teks judul dari link di dalam item, ubah jadi huruf kecil
            const judul = item.textContent.toLowerCase();

            // Cek: Apakah judul catatan mengandung teks yang diketik?
            if (judul.includes(inputan)) {
                item.style.display = ""; // Kalau cocok, tampilkan itemnya
            } else {
                item.style.display = "none"; // Kalau nggak cocok, sembunyikan
            }
        });
    }
    </script>

